<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
 <LinearLayout
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:id="@+id/scoreLayout"
     android:layout_alignParentTop="true"
     android:layout_margin="5dp"
     android:background="@color/colorBlue"
     android:layout_height="wrap_content">
     <TextView
         android:layout_width="match_parent"
         android:text="Score"
         android:fontFamily="monospace"
         android:textSize="30sp"
         android:layout_margin="5dp"
         android:textColor="@color/colorWhite"
         android:layout_height="wrap_content" />
     <TextView
         android:layout_width="match_parent"
         android:text="Player 1(X):0"
         android:fontFamily="monospace"
         android:id="@+id/p1"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:layout_margin="3dp"
         android:textColor="@color/colorWhite"
         android:layout_height="wrap_content" />
     <TextView
         android:layout_width="match_parent"
         android:text="Player 2(O):0"
         android:fontFamily="monospace"
         android:id="@+id/p2"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:layout_margin="3dp"
         android:textColor="@color/colorWhite"
         android:layout_height="wrap_content" />
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/boardLayout"
        android:layout_below="@+id/scoreLayout"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_00"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_01"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_02"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_10"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_11"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_20"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_21"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="casual"
                android:textSize="50sp"
                android:textStyle="bold"
                android:id="@+id/btn_22"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:text="@string/reset_board"
        android:id="@+id/resetBtn"
        android:layout_below="@+id/boardLayout"
        android:layout_height="wrap_content" />
</RelativeLayout>